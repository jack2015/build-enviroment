#!/bin/sh

CAMNAME="mgcamd145"

case "$1" in
	start)
	ulimit -s 1024
	exec start-stop-daemon -S -x /usr/bin/mgcamd145
	;;
	stop)
	exec start-stop-daemon -K -R 2 -x /usr/bin/mgcamd145
	;;
	restart|reload)
	$0 stop
	sleep 1
	$0 start
	;;
	version)
	echo "1.45c"
	;;
	info)
	echo "mgcamd 1.45c"
	;;
	*)
	echo "Usage: $0 start|stop|restart"
	exit 1
	;;
esac
exit 0
